<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newsItemView"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginLeft="5dp"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="30dp">

    <!-- Overarching layout of the badge holder-->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/student_IconContainer"
            android:layout_width="130dp"
            android:layout_height="130dp">
            <!-- Image icon location -->
            <ImageView
                android:id="@+id/imgStudentIcon"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:paddingHorizontal="10dp"
                android:src="@drawable/pfp_02"
                app:srcCompat="@drawable/pfp_02"
                tools:srcCompat="@drawable/pfp_02"
                />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/faq_icon"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="90dp"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical"
            android:layout_gravity="center">

            <!-- Vertically pulling pin down from top of holder -->
            <Space
                android:layout_width="0dp"
                android:layout_height="20dp"/>

            <!-- LAYOUT OF NAME PLACEMENT -->
            <TextView
                android:id="@+id/studentNameTextView"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arboria_bold"
                android:text="Example User Name"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <!-- Text to display number of user badges-->
            <TextView
                android:id="@+id/studentBadgeCountView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="120 Badges Earned"
                android:fontFamily="@font/arboria_medium"
                android:textSize="24dp"
                android:textColor="@color/mid_grey"/>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>