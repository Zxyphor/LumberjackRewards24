<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_339"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <RelativeLayout
            android:layout_width = "match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_401"
            tools:ignore="UselessParent">

            <ImageButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:src="@drawable/back_btn"
                android:id="@+id/backButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:textColor = "@color/white"
                android:layout_marginStart="-10dp"
                />
            <!-- app:icon="@drawable/back_btn" -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_a_badge"
                android:layout_centerInParent = "true"
                android:textColor = "@color/white"
                android:textStyle= "bold"
                android:textSize = "18sp"
                android:visibility="visible"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBadgeIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/badge_ex2" />
            <TextView
                android:id="@+id/badgeNameTextView"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Example Badge Name"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/pinBadgeButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_weight="0"
                android:background="@android:color/transparent"
                android:contentDescription="Button for pinning badges to home page"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/unpinned_badge_icon"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <TextView
            android:id="@+id/itemDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="This is sample text to replace with the specific badge completion requirements\n"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/itemStepsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Steps to complete \n 1. step 1 here \n 2. step 2 here"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/redeemBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redeem" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>