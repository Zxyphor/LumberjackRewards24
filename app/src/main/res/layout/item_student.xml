<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newsItemView"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="5dp"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="30dp">

    <!-- Overarching layout of the badge holder-->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/student_IconContainer"
            android:layout_width="100dp"
            android:layout_height="100dp">
            <!-- Image icon location -->
            <ImageView
                android:id="@+id/imgStudentIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingHorizontal="10dp"
                android:src="@drawable/pfp_01"
                app:srcCompat="@drawable/pfp_01"
                tools:srcCompat="@drawable/pfp_01"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="vertical">

            <!-- Vertically pulling pin down from top of holder -->
            <Space
                android:layout_width="0dp"
                android:layout_height="20dp"/>

            <!-- LAYOUT OF NAME PLACEMENT -->
            <TextView
                android:id="@+id/studentNameTextView"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arboria_bold"
                android:text="Example User Name"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold" />

            <!-- LAYOUT OF PROGRESS BAR PLACEMENT -->
            <!-- Relative layout allows for placement of text
                on top of the progress bar -->
            <TextView
                android:id="@+id/studentBadgeCountView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="58 Badges"
                android:fontFamily="@font/arboria_medium"
                android:textSize="16dp"
                android:textColor="@color/mid_grey"/>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>